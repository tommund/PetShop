

@model PetShop.Models.Animal
@{
    ViewData["Title"] = "Update an Animal";
}
<form asp-action="UpdateAnimal" asp-route-id="@Model.Id" method="post" enctype="multipart/form-data">
    <fieldset>
        <legend>UpdateAnimal Animal To Database:</legend>

        <label asp-for="Name"></label><br>
        <input asp-for="Name" placeholder="@Model.PictureName" type="text" name="animalName" required><br>
        <label asp-for="Age"></label><br>
        <input asp-for="Age" placeholder="@Model.Age" type="number" step="0.1" min="0.1" max="120" name="animalAge" required><br><br>

        <label asp-for="Description"></label><br>
        <input asp-for="Description" placeholder="@Model.Description" type="text" name="animalDescription" required><br>

        <label for="ChoosenCategoryId">Choose a Category:</label>
        <select id="ChoosenCategoryId" name="ChoosenCategoryId" required>
            <option id="ChoosenCategory" value="@Model.CategoryId"> @Model.Category.Name </option>

            @foreach (var item in ViewBag.Categories)
            {
                @if (!(item.Id == Model.CategoryId))
                {
                    <option value=@item.Id>@item.Name</option>
                }
            }
        </select>
        <label for="myfile">Select an Image:</label>
        <input type="file" id="myfile" name="file" required><br><br>
        <input type="submit" value="Submit">
    </fieldset>
</form>


